{% extends "base.html.twig" %}

{% block title %}Gestion utilisateur{% endblock %}

{% block body %}


    <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6  col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3">
        <h1> Gestion personne </h1>
        <form class="form-horizontal" action="{{ path("importcsv") }}" method="post" name="uploadCSV"
              enctype="multipart/form-data">
            <div class="input-row">
                <label class="col-xs-1 control-label">{{ "CSVFile"|trans }}</label>
                <input class="col-xs-5" type="file" name="file" id="file" accept=".csv">
                <button type="submit" id="submit" name="import" class="btn btn-default col-xs-2">{{ "Import"|trans }}</button>
                <br/>
                <hr>
            </div>
            <div id="labelError"></div>
        </form>

        {{ form_start(formulairePersonne) }}

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            {{ form_row(formulairePersonne.nom) }}
            {{ form_row(formulairePersonne.mail) }}
            {{ form_row(formulairePersonne.nouveauMotDePasse) }}
            {{ form_row(formulairePersonne.confirmationMotDePasse) }}



            {{ form_row(formulairePersonne.telephone) }}
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            {{ form_row(formulairePersonne.prenom) }}
            {{ form_row(formulairePersonne.rue) }}
            {{ form_row(formulairePersonne.cp) }}
            {{ form_row(formulairePersonne.ville) }}
            {{ form_row(formulairePersonne.permis) }}
            {{ form_row(formulairePersonne.isAdmin) }}

            <div class="col-xs-offset-8">
                {{ form_row(formulairePersonne.Enregistrer) }}
            </div>

        </div>

        {{ form_end(formulairePersonne) }}
    </div>


{% endblock %}
