{% extends "base.html.twig" %}

{% block title %}Administration{% endblock %}

{% block body %}

    <div class="row"><br/></div>
<div class="col-xs-10 col-sm-8 col-md-6 col-lg-6  col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3">


    {% for message in app.flashes('mailContact') %}
        <div class="valid">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('voiture') %}
        <div class="valid">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('personne') %}
        <div class="valid">
            {{ message }}
        </div>
    {% endfor %}



    <h1 align="center"> {{ "administration"|trans }} </h1>
    <div class="col-xs-3 col-xs-offset-1"><a class="btn btn-default" href="{{ path("mailcontact") }}">{{ "mail_contact"|trans }}</a></div>
    <div class="col-xs-3 col-xs-offset-1"><a class="btn btn-default" href="{{ path("gestionpersonne", {id:0}) }}">{{ "creation_personne"|trans }}</a></div>
    <div class="col-xs-3 col-xs-offset-1"><a class="btn btn-default" href="{{ path("gestionvoiture", {id:0}) }}">{{ "creation_voiture"|trans }}</a></div>

<div class="row"><br/></div>


    <div id="welcome">
        <h1>Liste personnes</h1>
    </div>
    <div class="row"><br/></div>
    <div class="table-responsive" >
        <table class="table table-hover" id="table_personne">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Permis</th>
                <th>Modifier / Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for personne in personnes %}
                <tr>
                    <td align="center">{{ personne.nom }}</td>
                    <td align="center">{{ personne.prenom }}</td>
                    {% if personne.permis == true %}

                    <td align="center" class="alert alert-success"><span class="glyphicon glyphicon-ok">

                                        </span></td>
                    {% else %}
                        <td  align="center" class="alert alert-danger"><span class="glyphicon glyphicon-remove">
                                            
                                        </span></td>
                        {% endif %}
                    <td align="center"><a class="btn btn-default" href="{{ path("gestionpersonne", {id: personne.id} )}}"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a class="btn btn-default" href="{{ path("suppressionpersonne", {id: personne.id} ) }}"><span class="glyphicon glyphicon-trash"></span></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row"></div>
    <div id="welcome">
        <h1>Liste voitures</h1>
    </div>
    <div class="row"><br/></div>
    <div class="table-responsive" >
        <table class="table table-hover" id="table_voiture">
            <thead>
            <tr>
                <th align="center">Libellé</th>
                <th align="center">Immatriculation</th>
                <th align="center">Couleur</th>
                <th align="center">Modifier / Supprimer</th>

            </tr>
            </thead>
            <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td align="center">{{ voiture.libelle }}</td>
                    <td align="center">{{ voiture.immatriculation }}</td>
                    <td align="center">{{ voiture.couleur }}</td>
                    <td align="center"><a class="btn btn-default" href="{{ path("gestionvoiture", {id: voiture.id} )}}"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a class="btn btn-default" href="{{ path("suppressionvoiture", {id: voiture.id} ) }}"><span class="glyphicon glyphicon-trash"></span></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row"><br/></div>

</div>



{% endblock %}

{% block javascripts %}
    <script>
        $("#table_personne").DataTable(

        );
    </script>

    <script>
        $("#table_voiture").DataTable(

        );
    </script>


{% endblock %}

{% block stylesheets %}
<style>
    .valid {color: #3c763d; align-content: center}
</style>
{% endblock %}
