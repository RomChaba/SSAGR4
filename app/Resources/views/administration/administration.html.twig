{% extends "base.html.twig" %}

{% block title %}Administration{% endblock %}

{% block body %}

    <div class="row"><br/></div>
<div class="col-xs-10 col-sm-8 col-md-6 col-lg-6  col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3">


    {% for message in app.flashes('mailContact') %}
        <div class="valid">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('voiture') %}
        <div class="valid">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('personne') %}
        <div class="valid">
            {{ message }}
        </div>
    {% endfor %}



    <h1 align="center"> {{ "administration"|trans }} </h1>
    <div class="col-xs-3 col-xs-offset-1"><a class="btn btn-default" href="{{ path("mailcontact") }}">{{ "mail_contact"|trans }}</a></div>
    <div class="col-xs-3 col-xs-offset-1"><a class="btn btn-default" href="{{ path("gestionpersonne", {id:0}) }}">{{ "creation_personne"|trans }}</a></div>
    <div class="col-xs-3 col-xs-offset-1"><a class="btn btn-default" href="{{ path("gestionvoiture", {id:0}) }}">{{ "creation_voiture"|trans }}</a></div>

<div class="row"><br/></div>


    <div id="welcome">
        <h1>Liste personnes</h1>
    </div>
    <div class="row"><br/></div>
    <div class="table-responsive" >
        <table class="table table-hover" id="table_personne">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Permis</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for personne in personnes %}
                <tr>
                    <td>{{ personne.nom }}</td>
                    <td>{{ personne.prenom }}</td>
                    <td>{{ personne.permis }}</td>
                    <td><a class="btn btn-default" href="{{ path("gestionpersonne", {id: personne.id} )}}">{{ "modifier"|trans }}</a></td>
                    <td><a class="btn btn-default" href="{{ path("suppressionpersonne", {id: personne.id} ) }}">{{ "supprimer"|trans }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row"></div>
    <div id="welcome">
        <h1>Liste voitures</h1>
    </div>
    <div class="row"><br/></div>
    <div class="table-responsive" >
        <table class="table table-hover" id="table_voiture">
            <thead>
            <tr>
                <th>Libellé</th>
                <th>Immatriculation</th>
                <th>Couleur</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td>{{ voiture.libelle }}</td>
                    <td>{{ voiture.immatriculation }}</td>
                    <td>{{ voiture.couleur }}</td>
                    <td><a class="btn btn-default" href="{{ path("gestionvoiture", {id: voiture.id} )}}">{{ "modifier"|trans }}</a></td>
                    <td><a class="btn btn-default" href="{{ path("suppressionvoiture", {id: voiture.id} ) }}">{{ "supprimer"|trans }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row"><br/></div>

</div>



{% endblock %}

