{% extends "base.html.twig" %}

{% block title %}Gestion voiture{% endblock %}

{% block body %}



    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h1> Gestion voiture </h1>


        <form class="form-horizontal" action="{{ path("importcsv") }}" method="post" name="uploadCSV"
              enctype="multipart/form-data">
            <div class="input-row">
                <label class="col-xs-12 col-sm-4 control-label">{{ "CSVFile"|trans }}</label>
                <input class="col-xs-12 col-sm-4" type="file" name="file" id="file" accept=".csv">
                <button type="submit" id="submit" name="import" class="btn btn-default col-xs-6 col-sm-4 pull-right">{{ "Import"|trans }}</button>
                <hr class="col-xs-12">
            </div>
            <div id="labelError"></div>
        </form>

        {{ form_start(formulaireVoiture) }}

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            {{ form_row(formulaireVoiture.libelle) }}
            {{ form_row(formulaireVoiture.immatriculation) }}
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            {{ form_row(formulaireVoiture.couleur) }}


            <div class="col-xs-offset-8">
                {{ form_row(formulaireVoiture.Enregistrer) }}
            </div>

        </div>


        {{ form_end(formulaireVoiture) }}
    </div>



{% endblock %}
