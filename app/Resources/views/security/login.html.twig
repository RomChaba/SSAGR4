{% extends "base.html.twig" %}
{% block body %}



<form action="{{ path('login') }}" class="col-xs-offset-4 col-xs-4" method="post">
    <div class="form-group">
        <label for="username">Login :</label>
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
    </div>

    <div class="form-group">
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" class="form-control" name="_password" />
    </div>
    {% if error %}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign"></span>  {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    {% endif %}
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit" class="btn btn-default pull-right">Connexion</button>
</form>
{% endblock body %}