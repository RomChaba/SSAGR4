{% set online = false %}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}SSAGR4{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {#<link rel="stylesheet" href="css/bootstrap.css">#}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}"/>
</head>
<body>
<style>
    .glyphicon-flag,.glyphicon-home {
        font-size: xx-large;
    }

    .topNavBar {
        margin: 1em !important;
    }

    .topNavBar > div > a {
        padding-left: 2em !important;
        padding-right: 2em !important;
    }
</style>

{% if online == false %}
    <div class="container-fluid">
        <div class="col-xs-12 text-center topNavBar">
            <div class="col-xs-1"><a href="{{ path("homepage") }}"><img src="{{ asset('img/logo-horizontal.png') }}" style="height: 100%; width: 100%;"></img></a></div>
            <div class="col-xs-2"><a class="btn btn-default" href="{{ path("Demande") }}">Proposer un voyage</a></div>
            <div class="col-xs-3"><a class="btn btn-default disabled" href="#">Participer à un voyage</a></div>
            <div class="col-xs-3"><a class="btn btn-default disabled" href="#">Connexion</a></div>
            <div class="col-xs-3"><a href="#"><span class="glyphicon glyphicon-flag"></span></a></div>
        </div>
    </div>
{% else %}
    <div class="container-fluid">
        <div class="col-xs-12 text-center topNavBar">
            <div class="col-xs-3"><a class="btn btn-default" href="#">Proposer un voyage</a></div>
            <div class="col-xs-3"><a class="btn btn-default" href="#">Participer à un voyage</a></div>
            <div class="col-xs-2">Bonjour <span style="color: red;">[NOM_COMPTE]</span></div>
            <div class="col-xs-1"><a class="btn btn-default" href="#">Mon Compte</a></div>
            <div class="col-xs-3"><a href="#"><span class="glyphicon glyphicon-flag"></span></a></div>
        </div>
    </div>
{% endif %}

{% block body %}



{% endblock %}
<nav style="display: none">
    <ul class="nav nav-justified navbar-fixed-bottom">
        <li class="active"><a href="#">Charte</a></li>
        <li><a href="#">Contact</a></li>
        <li><a href="#">Contraintes légales</a></li>
    </ul>
</nav>


<script src="{{ asset('js/jquery.js') }}"></script>
<script src="{{ asset('js/bootstrap.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>










